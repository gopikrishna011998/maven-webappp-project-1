- name: Install httpd 
  hosts: webserevers
  become: true
  tasks:
    - name: Install httpd
      yum:
        name: httpd
        state: present
    - name: start httpd
      service:
        name: httpd
        state: started
        enabled: true
    - name: copy index.html
      copy:
        src: index.html
        dest: /var/www/html
    - name: restart httpd
      service:
        name: httpd
        state: restarted
                  
